{
    "extends":"ess",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jasmine": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "modules": true
      }
    },
    "plugins": [
        "babel",
        "jasmine",
        "react"
    ],
    "globals": {
        "__WEBPACK__": true,
        "URLSearchParams": true
    },
    "rules": {
      "arrow-spacing": 2,
      "arrow-parens": [2, "as-needed"],
      "curly": [2, 'all'],
      "no-alert": 2,
      "no-console": 0,
      "no-unused-vars": [2, { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
      "object-shorthand": 2,
      "jasmine/named-spy": 0, // 1, currently broken
      "jasmine/no-focused-tests": 1,
      "jasmine/no-suite-dupes": [0, "branch"], // 1
      "jasmine/no-spec-dupes": [0, "branch"], // 1
      "jasmine/missing-expect": 0, // 2
      "jasmine/no-suite-callback-args": 2,
      "jasmine/valid-expect": 2,
      "jasmine/no-assign-spyon": 2,
      "jasmine/no-unsafe-spy": 0, // 2
      "react/no-danger": 2,
      "react/jsx-uses-vars": 1,
      "react/react-in-jsx-scope": 1
    }
}
